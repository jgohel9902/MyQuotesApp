@model FavouriteQuotesApp.Entities.Quote
<h2>Edit Quote</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <label>Quote:</label> 
    <input asp-for="Text" />
    <br />
    <br />
    <label>Author:</label>
    <input asp-for="Author" />
    <br /><br />
    <label>Description:</label>
    <input asp-for="Description" />
    <br />
    <br />
    <label>Rating:</label>
    <input asp-for="Rating" type="number" min="1" max="5" />
    <br />
    <br />
    <button type="submit">Save</button>
    <a asp-action="Items">Cancel</a>
</form>

